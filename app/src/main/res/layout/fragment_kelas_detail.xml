<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ca"
    tools:context=".KelasDetailFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="hallo"></TextView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardElevation="8dp"
        android:elevation="10dp"
        android:padding="5dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/tv_detail_nama_kelas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="namaKelas"
                android:textSize="20dp"
                android:gravity="center"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardElevation="8dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tv_upload_tugas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ini bagian upload tugas"
            ></TextView>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>