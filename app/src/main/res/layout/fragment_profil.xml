<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/satu">
            <LinearLayout
                android:background="@color/ca"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:orientation="vertical"
                android:background="#ffffff">
                <ImageView
                    android:id="@+id/foto_profil"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/tiga"
                    android:layout_marginTop="15dp"
                    android:elevation="20dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="210dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/profil"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nama user"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_edit_nama"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nim"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/et_nomormahasiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nim user"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_edit_nim"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/edit" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/call"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontak"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/tv_kontak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="kontak user"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_edit_kontak"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tombol_menu"
            android:padding="10dp"
            android:layout_margin="10dp"
            >
            <EditText
                android:id="@+id/et_password_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="verify your password"
                android:inputType="textPassword"
                android:padding="10dp"></EditText>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/iv_save_profil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                style="@style/buttonstyle3"
                android:src="@drawable/ic_save_black_24dp"
                ></ImageButton>

        </LinearLayout>

    </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>